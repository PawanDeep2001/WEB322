<div class="row">
<div class="col-md-12">
<h2><a href="/categories/add" class="btn btn-success pull-right">Add Category</a>Categories</h2>
<hr />
<div class="table-responsive">
    <table class="table">
    <tr>
        <th>Category ID</th>
        <th>Category Name</th>
    </tr>
    {{#each categories}}
    <tr>
        <td>{{id}}</td>
        <td><a href="./posts?category={{id}}">{{category}}</a></td>
        <td><a href="./categories/delete/{{id}}"><button class="btn btn-danger">remove</button></a></td>
    </tr>
    {{/each}}
</table>
{{#unless categories}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
</div>
</div>